pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh './gradlew clean assembleDebug'
                archiveArtifacts artifacts: 'app/build/outputs/apk/demo/debug/*.apk', fingerprint: true
            }
        }
        stage('Unit Tests') {
            steps {
                sh './gradlew clean testDebugUnitTest --no-daemon --rerun-tasks'
                junit 'app/build/reports/tests/**/*'
            }
        }
        post {
            always {
                archiveArtifacts 'app/build/reports/tests/**/*'
            }
        }
    }
}
